<h1>My Mixtapes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mixes.each do |mix| %>
      <tr>
        <td><%= mix.title %></td>
        <td><%= mix.description %></td>
        <td><%= link_to 'Show Mix', mix_path(mix) %></td>
        <% if mix.user == current_user %>
        <td><%= link_to 'Change Name', edit_mix_path(mix) %></td>
        <td><%= link_to 'Delete', mix, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mix', new_mix_path %>
